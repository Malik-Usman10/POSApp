<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="POSApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POSApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="POSApp">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Drawer -->
        <Border Grid.Column="0" 
                Background="{ThemeResource SystemControlAcrylicWindowBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <StackPanel Orientation="Vertical" 
                       Margin="0,20,0,0">

                <!-- Home Button -->
                <Button x:Name="HomeButton"
                       Width="50" 
                       Height="50"
                       Margin="5,10"
                       Background="Transparent"
                       BorderThickness="0"
                       Click="HomeButton_Click"
                       ToolTipService.ToolTip="Home">
                    <FontIcon Glyph="&#xE80F;" 
                             FontSize="24"
                             Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                </Button>

                <!-- Product Upload Button -->
                <Button x:Name="ProductUploadButton"
                       Width="50" 
                       Height="50"
                       Margin="5,10"
                       Background="Transparent"
                       BorderThickness="0"
                       Click="ProductUploadButton_Click"
                       ToolTipService.ToolTip="Product Management">
                    <FontIcon Glyph="&#xE895;" 
                             FontSize="24"
                             Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                </Button>

                <Button x:Name="SettingButton"
                       Width="50" 
                       Height="50"
                       Margin="5,10"
                       Background="Transparent"
                       BorderThickness="0"
                       Click="SettingButton_Click"
                       ToolTipService.ToolTip="Product Management">
                    <FontIcon Glyph="&#xE713;" 
                             FontSize="24"
                             Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                </Button>

                <Button x:Name="OrdersButton"
                       Width="50" 
                       Height="50"
                       Margin="5,10"
                       Background="Transparent"
                       BorderThickness="0"
                       Click="OrdersButton_Click"
                       ToolTipService.ToolTip="Orders History">
                    <FontIcon Glyph="&#xE8A7;" 
                             FontSize="24"
                             Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                </Button>

            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Frame x:Name="MainFrame" 
               Grid.Column="1"
               Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>

    </Grid>
</Window>
