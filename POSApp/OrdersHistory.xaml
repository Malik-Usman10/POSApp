<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POSApp.OrdersHistory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POSApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24" Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Date Selector Section -->
        <Border Grid.Row="0" 
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="20"
            Margin="0,0,0,20">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>
            <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE787;" 
                      FontSize="20" 
                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                <TextBlock Text="Select Date:" 
                       FontWeight="SemiBold" 
                       FontSize="16"
                       VerticalAlignment="Center"/>
                <DatePicker x:Name="OrdersDatePicker"
                        Width="220"
                        SelectedDateChanged="OrdersDatePicker_SelectedDateChanged"
                        SelectedDate="{x:Bind OrderDate, Mode=TwoWay}" />
            </StackPanel>
        </Border>

        <!-- Orders Display Section -->
        <Grid Grid.Row="1" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Paid Orders Column -->
            <Border Grid.Column="0" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="12"
                Padding="20">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <StackPanel>
                    <!-- Paid Orders Header -->
                    <StackPanel Orientation="Horizontal" 
                           Spacing="12" 
                           Margin="0,0,0,16">
                        <Border Background="#E8F5E8" 
                            CornerRadius="20" 
                            Padding="8">
                            <FontIcon Glyph="&#xE73E;" 
                                  FontSize="18" 
                                  Foreground="#2D7D32"/>
                        </Border>
                        <TextBlock Text="Paid Orders" 
                               FontSize="22" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Paid Orders List -->
                    <Border
                            CornerRadius="8"
                            Padding="2">
                        <ListView x:Name="PaidOrdersListView"
                                          VerticalAlignment="Stretch"
                                          MaxHeight="600"
                                          SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Order">
                                    <Expander Expanding="Expander_Expanding"
                                              HorizontalAlignment="Stretch"
                                              Background="{ThemeResource LayerFillColorDefaultBrush}">
                                        <Expander.HeaderTemplate>
                                            <DataTemplate x:DataType="local:Order">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <!-- Order ID -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- Date -->
                                                        <ColumnDefinition Width="Auto"/>
                                                        <!-- Price -->
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Order number -->
                                                    <TextBlock Text="Order #"
                                                               VerticalAlignment="Center"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <TextBlock Text="{x:Bind Id}"
                                                               Margin="50,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                                    <!-- Date in center -->
                                                    <TextBlock Text="{x:Bind OrderDateFormatted}"
                                                               Grid.Column="1"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontSize="14"
                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                                    <!-- Price on right -->
                                                    <TextBlock Text="{x:Bind TotalAmount}"
                                                               Grid.Column="2"
                                                               HorizontalAlignment="Right"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"
                                                               VerticalAlignment="Center"
                                                               Foreground="{ThemeResource SystemAccentColor}"/>
                                                    <!-- Edit Icon -->
                                                    <Button Click="EditOrder_Click"
                                                                   CommandParameter="{x:Bind}"
                                                                   Background="Transparent"
                                                                   BorderThickness="0"
                                                                   Margin="10,0,0,0"
                                                                   HorizontalAlignment="Right"
                                                                    Grid.Column="4">
                                                        <FontIcon Glyph="&#xE70F;"     
                                                              Foreground="{ThemeResource SystemAccentColor}"
                                                              VerticalAlignment="Center"
                                                              />
                                                        <!-- Edit icon -->
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </Expander.HeaderTemplate>

                                        <!-- Items -->
                                        <ItemsControl ItemsSource="{x:Bind Items, Mode=OneWay}" MinWidth="400">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="local:OrderItem">
                                                    <Grid Padding="4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Name -->
                                                        <TextBlock Text="{x:Bind Product.Name}" VerticalAlignment="Center" Grid.Column="0"/>

                                                        <!-- Quantity formatted like x2 -->
                                                        <TextBlock Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                                                            <Run Text="x" />
                                                            <Run Text="{x:Bind Quantity}"/>
                                                        </TextBlock>

                                                        <!-- Unit price -->
                                                        <TextBlock Text="{x:Bind UnitPrice}" Grid.Column="2" HorizontalAlignment="Right"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>


                    <!-- Paid Total -->
                    <Border Background="#E8F5E8"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               Spacing="8">
                            <TextBlock Text="Total:" 
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Foreground="{ThemeResource SystemAccentColor}"
                                   VerticalAlignment="Center"/>
                            <TextBlock FontWeight="SemiBold"
                                   FontSize="18"
                                   Foreground="Black"
                                   VerticalAlignment="Center">
                            <Run Text="Rs " />
                            <Run x:Name="PaidTotalRun" Text="0.0"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Unpaid Orders Column -->
            <Border Grid.Column="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="12"
                Padding="20">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <StackPanel>
                    <!-- Unpaid Orders Header -->
                    <StackPanel Orientation="Horizontal" 
                           Spacing="12" 
                           Margin="0,0,0,16">
                        <Border Background="#FFF3E0" 
                            CornerRadius="20" 
                            Padding="8">
                            <FontIcon Glyph="&#xE7BA;" 
                                  FontSize="18"
                                  Foreground="Black"/>
                        </Border>
                        <TextBlock Text="Unpaid Orders" 
                               FontSize="22" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Unpaid Orders List -->
                    <Border
                            CornerRadius="8"
                            Padding="2">
                        <ListView x:Name="UnpaidOrdersListView"
                                          VerticalAlignment="Stretch"
                                          MaxHeight="600"
                                          HorizontalAlignment="Stretch"
                                          SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Order">
                                    <Expander Expanding="Expander_Expanding"
                                              HorizontalAlignment="Stretch"
                                              Background="{ThemeResource LayerFillColorDefaultBrush}">
                                        <Expander.HeaderTemplate>
                                            <DataTemplate x:DataType="local:Order">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- Order ID -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- Date -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- Price -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!--Name-->
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Order number -->
                                                    <TextBlock Text="Order #"
                                                               VerticalAlignment="Center"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <TextBlock Text="{x:Bind Id}"
                                                               Margin="50,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                                    <!-- Date in center -->
                                                    <TextBlock Text="{x:Bind OrderDateFormatted}"
                                                               Grid.Column="1"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontSize="14"
                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                                    <!--Name-->
                                                    <TextBlock Text="{x:Bind Name}"
                                                               Grid.Column="2"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontSize="14"
                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                                    <!-- Price on right -->
                                                    <TextBlock Text="{x:Bind TotalAmount}"
                                                               Grid.Column="3"
                                                               HorizontalAlignment="Right"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"
                                                               VerticalAlignment="Center"
                                                               Foreground="{ThemeResource SystemAccentColor}"/>
                                                    <!-- Edit Icon button -->
                                                    <Button Click="EditOrder_Click"
                                                                   CommandParameter="{x:Bind}"
                                                                   Background="Transparent"
                                                                   BorderThickness="0"
                                                                   Margin="10,0,0,0"
                                                                   HorizontalAlignment="Right"
                                                                    Grid.Column="4">
                                                        <FontIcon Glyph="&#xE70F;"     
                                                              Foreground="{ThemeResource SystemAccentColor}"
                                                              VerticalAlignment="Center"
                                                              />
                                                        <!-- Edit icon -->
                                                    </Button>

                                                </Grid>
                                            </DataTemplate>
                                        </Expander.HeaderTemplate>

                                        <!-- Items -->
                                        <ItemsControl ItemsSource="{x:Bind Items, Mode=OneWay}" MinWidth="400">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="local:OrderItem">
                                                    <Grid Padding="4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Name -->
                                                        <TextBlock Text="{x:Bind Product.Name}" VerticalAlignment="Center" Grid.Column="0"/>

                                                        <!-- Quantity formatted like x2 -->
                                                        <TextBlock Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                                                                    <Run Text="x" />
                                                                    <Run Text="{x:Bind Quantity}"/>
                                                        </TextBlock>

                                                        <!-- Unit price -->
                                                        <TextBlock Text="{x:Bind UnitPrice}" Grid.Column="2" HorizontalAlignment="Right"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>

                    <!-- Unpaid Total -->
                    <Border Background="#FFF3E0"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               Spacing="8">
                            <TextBlock Text="Total:" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                            <TextBlock FontWeight="Bold"
                                   FontSize="18"
                                   Foreground="{ThemeResource SystemAccentColor}"
                                   VerticalAlignment="Center">
                            <Run Text="Rs " />
                            <Run x:Name="UnpaidTotalRun" Text="0.00"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
