<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POSApp.OrdersHistory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POSApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24" Background="{ThemeResource LayerFillColorDefaultBrush}" Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Date Selector Section -->
        <Border Grid.Row="0" 
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="20"
            Margin="0,0,0,20">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>
            <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE787;" 
                      FontSize="20" 
                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                <TextBlock Text="Select Date:" 
                       FontWeight="SemiBold" 
                       FontSize="16"
                       VerticalAlignment="Center"/>
                <DatePicker x:Name="OrdersDatePicker"
                        Width="220"
                        SelectedDateChanged="OrdersDatePicker_SelectedDateChanged"
                        SelectedDate="{x:Bind OrderDate, Mode=TwoWay}" />
            </StackPanel>
        </Border>

        <!-- Orders Display Section -->
        <Grid Grid.Row="1" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Paid Orders Column -->
            <Border Grid.Column="0" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="12"
                Padding="20">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <StackPanel>
                    <!-- Paid Orders Header -->
                    <StackPanel Orientation="Horizontal" 
                           Spacing="12" 
                           Margin="0,0,0,16">
                        <Border Background="#E8F5E8" 
                            CornerRadius="20" 
                            Padding="8">
                            <FontIcon Glyph="&#xE73E;" 
                                  FontSize="18" 
                                  Foreground="#2D7D32"/>
                        </Border>
                        <TextBlock Text="Paid Orders" 
                               FontSize="22" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Paid Orders List -->
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="2">
                        <ListView x:Name="PaidOrdersListView"
                                  VerticalAlignment="Stretch"
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Order">
                                    <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                                        CornerRadius="6"
                                        Padding="16,12"
                                        Margin="4,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Bind OrderDate}" 
                                                   Grid.Column="0"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="{x:Bind TotalAmount}" 
                                                   Grid.Column="1" 
                                                   HorizontalAlignment="Right"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Foreground="{ThemeResource SystemAccentColor}"
                                            />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>

                    <!-- Paid Total -->
                    <Border Background="#E8F5E8"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               Spacing="8">
                            <TextBlock Text="Total:" 
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Foreground="{ThemeResource SystemAccentColor}"
                                   VerticalAlignment="Center"/>
                            <TextBlock FontWeight="SemiBold"
                                   FontSize="18"
                                   Foreground="Black"
                                   VerticalAlignment="Center">
                            <Run Text="Rs " />
                            <Run x:Name="PaidTotalRun" Text="0.0"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Unpaid Orders Column -->
            <Border Grid.Column="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="12"
                Padding="20">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <StackPanel>
                    <!-- Unpaid Orders Header -->
                    <StackPanel Orientation="Horizontal" 
                           Spacing="12" 
                           Margin="0,0,0,16">
                        <Border Background="#FFF3E0" 
                            CornerRadius="20" 
                            Padding="8">
                            <FontIcon Glyph="&#xE7BA;" 
                                  FontSize="18"
                                  Foreground="Black"/>
                        </Border>
                        <TextBlock Text="Unpaid Orders" 
                               FontSize="22" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Unpaid Orders List -->
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="2">
                        <ListView x:Name="UnpaidOrdersListView" 
                              VerticalAlignment="Stretch"
                              SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Order">
                                    <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                                        CornerRadius="6"
                                        Padding="16,12"
                                        Margin="4,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Bind OrderDate}" 
                                                   Grid.Column="0"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="{x:Bind TotalAmount}" 
                                                   Grid.Column="1" 
                                                   HorizontalAlignment="Right"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="{ThemeResource SystemAccentColor}"
                                                   VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>

                    <!-- Unpaid Total -->
                    <Border Background="#FFF3E0"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               Spacing="8">
                            <TextBlock Text="Total:" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                            <TextBlock FontWeight="Bold"
                                   FontSize="18"
                                   Foreground="{ThemeResource SystemAccentColor}"
                                   VerticalAlignment="Center">
                            <Run Text="Rs " />
                            <Run x:Name="UnpaidTotalRun" Text="0.00"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
