<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POSApp.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POSApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,20,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Products Section -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <TextBox Grid.Row="0"
                    x:Name="ProductSearchBox"
                    Grid.Column="0"
                    PlaceholderText="Search products..."
                    Height="40"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    Margin="0,0,0,20"
                    Padding="20,10,0 ,0"
                    TextChanged="ProductSearchBox_TextChanged"
                     CornerRadius="20">
                <TextBox.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorBaseBrush}"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource TextFillColorTertiaryBrush}"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Filter By Categories -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Spacing="20">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="100"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Medium"/>
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="CornerRadius" Value="20"/>
                        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="KarahiButton"
                        Content="Karahi"
                        Tag="Karahi"
                        Click="CategoryButton_Click"
                        />
                <Button x:Name="HandiButton"
                        Content="Handi"
                        Tag="Handi"
                        Click="CategoryButton_Click"
                        />
                <Button x:Name="TikkaButton"
                        Content="Tikka"
                        Tag="Tikka"
                        Click="CategoryButton_Click"

                        />
                <Button x:Name="KababButton"
                        Content="Kabab"
                        Tag="Kabab"
                        Click="CategoryButton_Click"

                        />
                <Button x:Name="TandoorButton"
                        Content="Tandoor"
                        Tag="Tandoor"
                        Click="CategoryButton_Click"

                        />
                <Button x:Name="DrinksButton"
                        Content="Drinks"
                        Tag="Drinks"
                        Click="CategoryButton_Click"

                />
            </StackPanel>

            <!-- Products List -->
            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,20,0,0">
                <GridView x:Name="ProductsListView"
                          SelectionMode="None"
                          ItemClick="ProductsGridView_ItemClick"
                          IsItemClickEnabled="True"
                          HorizontalAlignment="Stretch"
                          Padding="10"
                          ScrollViewer.HorizontalScrollMode="Disabled"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <!-- Responsive ItemsPanel for different screen sizes -->
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                               ItemWidth="280"
                               ItemHeight="120"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:Product">
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="8"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    Width="264"
                                    Height="104">

                                <!-- Card hover effect -->
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="CardBorder.Translation" Value="0,-2,8" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Border x:Name="CardBorder">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Product Name -->
                                        <TextBlock Text="{x:Bind Name}"
                                       Grid.Row="0"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       TextWrapping="Wrap"
                                       MaxLines="2"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0,0,0,4" />

                                        <!-- Quantity -->
                                        <TextBlock Text="Quantity: x1"
                                       Grid.Row="1"
                                       FontSize="14"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,8" />

                                        <!-- Spacer -->
                                        <Rectangle Grid.Row="2" />

                                        <!-- Price -->
                                        <Border Grid.Row="3"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                HorizontalAlignment="Right">
                                            <TextBlock FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                                                <Run Text="PKR "/>
                                                <Run Text="{x:Bind Price}"/>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <!-- Adaptive triggers for different screen sizes -->
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                </GridView>
            </ScrollViewer>
        </Grid>

        <!-- Order Section -->
        <Border Grid.Column="1" 
           Background="{ThemeResource SystemControlAcrylicWindowBrush}"
           BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
           BorderThickness="1"
           Margin="0,20,20,20"
           CornerRadius="8">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Order Header -->
                <TextBlock Grid.Row="0"
                      Text="Current Order"
                      FontSize="22"
                      FontWeight="Bold"
                      Margin="0,0,0,20"
                      HorizontalAlignment="Center"/>

                <!-- Order Items -->
                <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="OrderItemsListView"
                         SelectionMode="None"
                         Background="Transparent"
                         BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:OrderItem">
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                   CornerRadius="12"
                                   Padding="16"
                                   Margin="0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Product Name -->
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                              Text="{x:Bind Product.Name}"
                                              FontWeight="SemiBold"
                                              FontSize="16"
                                              TextTrimming="CharacterEllipsis"/>

                                        <!-- Remove Button -->
                                        <Button Grid.Row="0" Grid.Column="1"
                                           Background="{ThemeResource AccentFillColorSecondaryBrush}"
                                           BorderThickness="0"
                                           Width="32" Height="32"
                                           CornerRadius="16"
                                           Click="RemoveOrderItem_Click"
                                           Tag="{x:Bind}">
                                            <FontIcon Glyph="&#xE711;" FontSize="14" Foreground="White"/>
                                        </Button>

                                        <!-- Quantity and Price -->
                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                                               Orientation="Horizontal"
                                               Margin="0,0,0,0">
                                            <Button Content="-"
                                               Width="32" Height="32"
                                               Padding="0"
                                               FontSize="18"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                               Style="{ThemeResource ButtonRevealStyle}"
                                               Click="DecreaseQuantity_Click"
                                               Tag="{x:Bind}"/>
                                            <TextBlock Text="{x:Bind Quantity, Mode=OneWay}"
                                                  VerticalAlignment="Center"
                                                  Margin="16,0"
                                                  MinWidth="24"
                                                  TextAlignment="Center"/>
                                            <Button Content="+"
                                               Width="32" Height="32"
                                               Padding="0"
                                               FontSize="18"
                                               HorizontalContentAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Style="{ThemeResource ButtonRevealStyle}"
                                               Click="IncreaseQuantity_Click"
                                               Tag="{x:Bind}"/>
                                            <TextBlock VerticalAlignment="Center"
                                                  Margin="24,0,0,0"
                                                  FontWeight="Bold"
                                                  FontSize="16">
                                            <Run Text="PKR "/><Run Text="{x:Bind Total}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>

                <!-- Subtotal -->
                <Border Grid.Row="2"
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   CornerRadius="12"
                   Padding="16"
                   Margin="0,16,0,16">
                    <TextBlock FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center">
                    <Run Text="Subtotal: PKR "/><Run x:Name="SubtotalRun" Text="0.00"/>
                    </TextBlock>
                </Border>

                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            Spacing="10"
                            Margin="0,0,0,8">
                    <CheckBox x:Name="PaidCheckbox" 
                              Content="Paid" 
                              FontSize="18" 
                              Margin="0,0,0,12"
                              IsChecked="True"/>
                </StackPanel>

                <!-- Print Button -->
                <Button x:Name="PrintButton"
                   Grid.Row="4"
                   Content="Print Order"
                   HorizontalAlignment="Stretch"
                   CornerRadius="25"
                   Height="50"
                   FontSize="16"
                   Margin="0,0,0,8"
                   FontFamily="Tahoma"
                   Foreground="White"
                   Background="{ThemeResource SystemAccentColor}"
                   Click="PrintButton_Click"/>

                <!-- Preview Receipt Button -->
                <Button x:Name="PreviewReceiptButton"
                    Grid.Row="5"
                    Content="Preview Receipt"
                    HorizontalAlignment="Stretch"
                    CornerRadius="25"
                    Height="50"
                    FontSize="16"
                    FontFamily="Tahoma"
                    Margin="0,8,0,8"
                    Foreground="White"
                    Background="{ThemeResource SystemAccentColor}"
                    Click="PreviewReceiptButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
