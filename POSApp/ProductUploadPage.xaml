<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POSApp.ProductUploadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POSApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Bar -->
            <TextBox x:Name="ProductSearchBox"
                    Grid.Column="0"
                    PlaceholderText="Search products..."
                    Height="40"
                    FontSize="16"
                    Margin="0,0,20,0"
                    Padding="20,10,0 ,0"
                    TextChanged="ProductSearchBox_TextChanged"
                     CornerRadius="20">
                <TextBox.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorBaseBrush}"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource TextFillColorTertiaryBrush}"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Create Product Button -->
            <Button x:Name="CreateProductButton"
                   Grid.Column="1"
                   Content="Create Product"
                   Height="40"
                   MinWidth="140"
                   CornerRadius="20"
                   Padding="10,0"
                   Foreground="Black"
                   BorderThickness="1"
                   FontSize="16"
                   FontWeight="Medium"
                   Style="{ThemeResource AccentButtonStyle}"
                   Click="CreateProductButton_Click"/>
        </Grid>

        <!-- Products List -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto">
            <ListView x:Name="ProductsListView"
                     SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Product">
                        <Border Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,8"
                               BorderBrush="{ThemeResource TextFillColorTertiaryBrush}"
                               BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Product Image -->
                                <Border Grid.Column="0"
                                       Width="70"
                                       Height="70"
                                       CornerRadius="6"
                                       Background="{ThemeResource ControlFillColorDefaultBrush}">
                                    <Image Source="{x:Bind ProductImageSource}"
                                          Stretch="UniformToFill"/>
                                </Border>

                                <!-- Product Details -->
                                <StackPanel Grid.Column="1" 
                                           Margin="16,0"
                                           VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Name}"
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="{x:Bind Category}"
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              Foreground="SkyBlue"
                                              Margin="0,0,0,4"/>
                                    <TextBlock FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}">
                                        <Run Text="Rs "/><Run Text="{x:Bind Price}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="2"
                                           Orientation="Horizontal"
                                           VerticalAlignment="Center"
                                           Spacing="8">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Width" Value="100"/>
                                            <Setter Property="Height" Value="40"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="FontWeight" Value="Medium"/>
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="CornerRadius" Value="20"/>
                                            <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
                                            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                        </Style>
                                    </StackPanel.Resources>
                                    <Button Content="Edit"
                                           Click="EditProduct_Click"
                                           Tag="{x:Bind}"/>
                                    <Button Content="Delete"
                                           Click="DeleteProduct_Click"
                                           Background="{ThemeResource SystemAccentColor}"
                                           Tag="{x:Bind}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
